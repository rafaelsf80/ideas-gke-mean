extends ../layout.pug

block content
    h2 Editar Estudiante
    form(action="/students/update", method="POST")
        .form-group
            label(for="nombre") Nombre
            input.form-control(type="text", name="nombre", value=estudiante.nombre)
        .form-group
            label(for="apellidos") Apellidos
            input.form-control(type="text", name="apellidos", value=estudiante.apellidos)
        .form-group
            label(for="dni") DNI
            input.form-control(type="text", name="dni", value=estudiante.dni)
        .form-group
            label(for="edad") Edad
            input.form-control(type="number", name="edad", value=estudiante.edad)
        .form-group
            label(for="activo") Activo
            //input.form-control(type="boolean", name="activo", value=estudiante.activo.toString())
            input.form-control(type="checkbox", name="activo", checked=estudiante.activo)
        // Importante: hay que a√±adir el id como hidden
        input(type="hidden", name="studentId", value=estudiante._id)
        input.btn.btn-primary.btn-block(type="submit", value="Modificar")
        a.btn.btn-danger.btn-block(href="/students/edit/"+estudiante._id) Descartar cambios
        


